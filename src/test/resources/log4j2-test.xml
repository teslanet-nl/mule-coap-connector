<Configuration status="WARN" name="test-config"
	strict="true">
	<Properties>
		<Property name="PATTERN">%-5level %d [%t] %c:%M(%L): %m%n</Property>
	</Properties>
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="${PATTERN}" />
		</Console>
	</Appenders>
	<Loggers>
		<!-- used by testcode -->
		org.mule.runtime.module.artifact.api.classloader.FineGrainedControlClassLoader
		<Logger name="org.mule.runtime.module.artifact.api.classloader.FineGrainedControlClassLoader" level="debug"
			additivity="true">
			<AppenderRef ref="Console" />
		</Logger>
		<Logger name="nl.teslanet.shaded.org.eclipse" level="info"
            additivity="false">
            <AppenderRef ref="Console" />
        </Logger>
		<!-- used by connector -->
		<Logger name="org.eclipse" level="info" additivity="false">
			<AppenderRef ref="Console" />
		</Logger>
		<Root level="info">
			<AppenderRef ref="Console" />
		</Root>
	</Loggers>
</Configuration>